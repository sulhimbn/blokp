<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlokP"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">

        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.LaporanActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.MenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.PaymentActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.TransactionHistoryActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.CommunicationActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.VendorManagementActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iurankomplek.presentation.ui.activity.WorkOrderDetailActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>