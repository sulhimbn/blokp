<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlokP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Teal/Green palette (lighter for dark mode) -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color - Accent teal -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_primary</item>
        <!-- Error color -->
        <item name="colorError">@color/status_error</item>
    </style>
</resources>