<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production API with enhanced certificate pinning -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.apispreadsheets.com</domain>
        <pin-set expiration="2028-12-31">
            <!-- Primary certificate pin - DO NOT REMOVE until backup is confirmed working -->
            <pin algorithm="sha256">PIdO5FV9mQyEclv5rMC4oGNTya7Q9S5/Sn1KTWpQov0=</pin>
            <!-- Backup certificate pin for certificate rotation redundancy -->
            <!-- IMPORTANT: Replace BACKUP_CERTIFICATE_PIN_PLACEHOLDER with actual pin before production deployment -->
            <!-- Generate actual pin using: openssl s_client -servername api.apispreadsheets.com -connect api.apispreadsheets.com:443 2>/dev/null | openssl x509 -pubkey -noout | openssl pkey -pubin -outform der | openssl dgst -sha256 -binary | openssl enc -base64 -->
            <pin algorithm="sha256">BACKUP_CERTIFICATE_PIN_PLACEHOLDER</pin>
        </pin-set>
    </domain-config>
    
    <!-- Local development server configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">api-mock</domain>
    </domain-config>
    
    <!-- Debug overrides to allow cleartext traffic for local development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
        <!-- Allow cleartext traffic in debug builds -->
        <cleartextTrafficPermitted>true</cleartextTrafficPermitted>
    </debug-overrides>
</network-security-config>