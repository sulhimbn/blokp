<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="yes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_md">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vendor_performance_title"
            android:textSize="@dimen/heading_h2"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_md"
            android:gravity="center"
            android:contentDescription="@string/vendor_performance_title_desc" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TextView
                android:id="@+id/analyticsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:lineSpacingExtra="@dimen/spacing_xs"
                android:textColor="@color/text_primary"
                android:contentDescription="@string/vendor_performance_analytics_desc" />

        </ScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/loading_content_description" />

    <LinearLayout
        android:id="@+id/errorStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:importantForAccessibility="yes">

        <TextView
            android:id="@+id/errorStateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_loading_vendor_performance"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/error"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:contentDescription="@string/error_loading_vendor_performance" />

        <TextView
            android:id="@+id/retryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry_loading_data"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/spacing_md"
            android:contentDescription="@string/retry_loading_data" />

    </LinearLayout>

</FrameLayout>