<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    tools:context=".LaporanActivity">

      <!-- Header Title -->
    <TextView
        android:id="@+id/textView1"
        style="@style/Widget.BlokP.Header"
        android:text="@string/laporan_activity_title"
        android:contentDescription="@string/laporan_activity_title_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SwipeRefreshLayout for pull-to-refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/swipe_refresh_desc"
        android:accessibilityLiveRegion="polite"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- State Management Include -->
                <include
                    android:id="@+id/stateManagementInclude"
                    layout="@layout/include_state_management" />

                <!-- RecyclerView for summary items -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_summary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_sm"
                    android:clipToPadding="false"
                    android:importantForAccessibility="yes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- TextView for Pemanfaatan title -->
                <TextView
                    android:id="@+id/pemanfaatanTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pemanfaatan_title"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/text_size_normal"
                    android:paddingBottom="@dimen/spacing_sm"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:paddingStart="@dimen/padding_md"
                    android:paddingTop="@dimen/padding_md"
                    android:paddingEnd="@dimen/padding_md"
                    android:importantForAccessibility="yes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_summary" />

                <!-- RecyclerView for pemanfaatan details -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_laporan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/accent_peach"
                    android:fontFamily="@font/font"
                    android:padding="@dimen/spacing_xs"
                    android:clipToPadding="false"
                    android:importantForAccessibility="yes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pemanfaatanTextView"
                    tools:listitem="@layout/item_pemanfaatan" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>