<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    android:paddingStart="@dimen/padding_xxl"
    android:paddingEnd="@dimen/padding_xxl"
    tools:context=".MenuActivity">

    <!-- App Title (Top, centered) -->
    <TextView
        android:id="@+id/textView1"
        style="@style/Widget.BlokP.Header.Large"
        android:text="@string/menu_activity_title"
        android:contentDescription="@string/menu_activity_title_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

     <!-- Row 1 Menu Items -->
     <!-- Warga Menu Item -->
    <LinearLayout
        android:id="@+id/cdMenu1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:layout_marginEnd="@dimen/spacing_md"
        android:background="@drawable/bg_card_view_focused"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/profile_menu_content_description"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cdMenu2"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintBottom_toTopOf="@+id/cdMenu3"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/icon_xxxl"
            android:layout_height="@dimen/icon_xxxl"
            android:layout_marginBottom="@dimen/spacing_md"
            android:contentDescription="@string/profile_menu_content_description"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="@string/menu_warga"
            android:textColor="@color/accent_teal_dark"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Laporan Menu Item -->
    <LinearLayout
        android:id="@+id/cdMenu2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:background="@drawable/bg_card_view_focused"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/report_menu_content_description"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/cdMenu1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintBottom_toTopOf="@+id/cdMenu4"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/icon_xxxl"
            android:layout_height="@dimen/icon_xxxl"
            android:layout_marginBottom="@dimen/spacing_md"
            android:contentDescription="@string/report_menu_content_description"
            app:srcCompat="@drawable/kas" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="@string/menu_laporan"
            android:textColor="@color/accent_teal_dark"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </LinearLayout>

     <!-- Row 2 Menu Items -->
     <!-- Komunikasi Menu Item -->
    <LinearLayout
        android:id="@+id/cdMenu3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginBottom="@dimen/spacing_xxl"
        android:layout_marginEnd="@dimen/spacing_md"
        android:background="@drawable/bg_card_view_focused"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/communication_menu_content_description"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cdMenu4"
        app:layout_constraintTop_toBottomOf="@id/cdMenu1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/icon_xxxl"
            android:layout_height="@dimen/icon_xxxl"
            android:layout_marginBottom="@dimen/spacing_md"
            android:contentDescription="@string/communication_menu_content_description"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="@string/menu_komunikasi"
            android:textColor="@color/accent_teal_dark"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Pembayaran Menu Item -->
    <LinearLayout
        android:id="@+id/cdMenu4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginBottom="@dimen/spacing_xxl"
        android:background="@drawable/bg_card_view_focused"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/payment_menu_content_description"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/cdMenu3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cdMenu2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/icon_xxxl"
            android:layout_height="@dimen/icon_xxxl"
            android:layout_marginBottom="@dimen/spacing_md"
            android:contentDescription="@string/payment_menu_content_description"
            app:srcCompat="@drawable/kas" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="@string/menu_pembayaran"
            android:textColor="@color/accent_teal_dark"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
