<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Suppress known false positives and dependencies used in testing -->
    <suppress>
        <notes><![CDATA[
            Suppress vulnerabilities in test dependencies that are not packaged in production builds
        ]]></notes>
        <gav regex=".*test.*"/>
        <gav regex=".*junit.*"/>
        <gav regex=".*mockito.*"/>
        <gav regex=".*espresso.*"/>
        <gav regex=".*robolectric.*"/>
    </suppress>
    <suppress>
        <notes><![CDATA[
            Suppress vulnerabilities in Chucker (debug-only network inspection tool, not in release builds)
        ]]></notes>
        <gav regex=".*chucker.*"/>
    </suppress>
    <suppress>
        <notes><![CDATA[
            Suppress low-severity vulnerabilities with CVSS < 5.0 (handled by failBuildOnCVSS=7)
        ]]></notes>
        <cvssBelow>5.0</cvssBelow>
    </suppress>
</suppressions>
